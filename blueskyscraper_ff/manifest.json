{
    "manifest_version": 2,
    "name": "BlueskyScraper",
    "version": "0.2.4",
    "description": "A browser extension to scrape Bluesky search results",
    "homepage_url": "https://fmoncomble.github.io/blueskyscraper/",
    "permissions": ["storage"],
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon-32.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{4e7d92a3-b139-4281-8859-d0336b274916}",
            "update_url": "https://github.com/fmoncomble/blueskyscraper/releases/latest/download/update_manifest.json"
        }
    }
}